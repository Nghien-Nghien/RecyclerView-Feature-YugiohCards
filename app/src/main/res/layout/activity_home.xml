<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yu_gi_oh_homescreen"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/buttonYugiCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonJoeyCards"
        android:layout_alignRight="@+id/buttonJoeyCards"
        android:layout_centerInParent="true"
        android:backgroundTint="#f0f9fb"
        android:text="Yugi Cards"
        android:textColor="#666666"
        android:textSize="15sp" />

    <Button
        android:id="@+id/buttonJoeyCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonYugiCards"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#f0f9fb"
        android:text="Joey Cards"
        android:textColor="#666666"
        android:textSize="15sp" />

</RelativeLayout>