<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recyclerviewfeature">

    <application

        android:allowBackup="true"
        android:icon="@mipmap/iconyugioh_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecyclerViewFeature">

        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".YugiCardActivity"
            android:theme="@style/Theme.RecyclerViewFeature.SlidrActivity" />

        <activity
            android:name=".JoeyCardActivity"
            android:theme="@style/Theme.RecyclerViewFeature.SlidrActivity" />

    </application>

</manifest>